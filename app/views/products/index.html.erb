<h1>Our shitty little store</h1>

<p> <%= link_to('New Product', new_product_path) %> </p>

<% @products.each do |product| %>
<ul>
  <li>
    <p>
      <%= link_to(product.name, product_path(product.id)) %>
    </p>
    <p>
      Description: <%= product.description %>
    </p>
    <p>
      Price: <%= product.price %>
    </p>
  </li>
</ul>


<% end %>
