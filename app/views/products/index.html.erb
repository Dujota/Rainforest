<h2>Our shitty little store</h2>

<% @products.each do |product| %>
<ul>
  <li>
    <p>
      <%= link_to(product.name, product_path(product.id)) %>
    </p>
    <p>
      Description: <%= product.description %>
    </p>
    <p>
      Price: <%= product.price_in_dollars %>
    </p>
  </li>
</ul>


<% end %>
